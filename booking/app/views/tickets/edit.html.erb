<h1>Edit Ticket</h1>

<%= form_with(model: @ticket, local: true) do |form| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
        <% @ticket.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number%>
  </div>

  <div class="field">
    <%= form.label :user %>
    <%= form.text_field :current_user_id %>
  </div>


  <div class="field">
    <%= form.label :current_train, 'Train' %>
    <%= form.collection_select :current_train_id,
                               Train.all, :id, :number %>
  </div>

  <div class="field">
    <%= form.label :first_railway_station %>
    <%= form.collection_select :first_railway_station_id,
                               RailwayStation.all, :id, :title %>
  </div>

  <div class="field">
    <%= form.label :last_railway_station %>
    <%= form.collection_select :last_railway_station_id,
                               RailwayStation.all, :id, :title %>
  </div>

  <div class="actions">
    <%= form.submit 'Edit' %>
  </div>
<% end %>
<%= link_to 'Back', ticket_path %>
