<p id="notice"><%= notice %></p>

<h1>Tickets list</h1>

<table>
  <thead>
  <tr>
    <th>Number</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tickets.each do |ticket| %>
    <tr>
      <td><%= ticket.number %></td>
      <td><button><%= link_to 'Show', ticket %></button></td>
      <td><button><%= link_to 'Edit', edit_ticket_path(ticket) %></button></td>
      <td><button><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<button> <%= link_to 'New Ticket', new_ticket_path %> </button>
<button> <%= link_to 'Back','welcome#index' %></button>
