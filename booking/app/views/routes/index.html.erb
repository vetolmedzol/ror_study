<p id="notice"><%= notice %></p>

<h1>Routes list</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @routes.each do |route| %>
    <tr>
      <td><%= route.name %></td>
      <td><button><%= link_to 'Show', route %></button></td>
      <td><button><%= link_to 'Edit', edit_route_path(route) %></button></td>
      <td><button><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<button> <%= link_to 'New Route', new_route_path %> </button>
<button> <%= link_to 'Back', 'welcome#index' %> </button>
